#shorterner-index
  %table
    %thead
      %tr
        %th Shortened
        %th Full Url
        %th Set Count
        %th Click Count
        %th Expire
        %th Max Clicks
    %tbody
      - @shortens.each do |short|
        %tr
          %td= short['shortened']
          %td
            %a{href: short['url']}= short['url'][0..60] + ((short['url'].length > 60) ? '...' : '')
          %td= short['set-count']
          %td= short['click-count']
          %td= short['expire']
          %td= short['max-clicks']
          %td
            %a{href: "/delete/#{short['shortened']}", class: 'delete-button'}
              %img{src: 'delete-icon.png', alt: 'delete!', width: '16px', height: '16px'}
          %td= clippy("#{base_url}/#{short['shortened']}")

